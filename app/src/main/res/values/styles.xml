<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/color_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_24</item>
        <item name="android:layout_height">@dimen/size_24</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginLeft">@dimen/size_16</item>
        <item name="android:layout_marginRight">@dimen/size_8</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
    </style>

    <style name="text">
        <item name="android:layout_width">@dimen/size_56</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_16</item>
    </style>

    <style name="text.value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:layout_marginLeft">@dimen/size_16</item>
        <item name="android:layout_marginRight">@dimen/size_16</item>
        <item name="android:layout_marginTop">@dimen/size_16</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/font_14</item>
    </style>
</resources>
